<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/header_photo_circle_diameter"
        android:layout_height="@dimen/header_photo_circle_diameter"
        android:layout_marginBottom="@dimen/header_photo_circle_margin"
        android:layout_marginLeft="@dimen/header_photo_circle_margin"
        android:layout_marginRight="@dimen/header_photo_circle_margin"
        android:layout_marginTop="@dimen/header_photo_circle_margin_top"
        android:src="@mipmap/ic_account"
        app:civ_border_color="#4c393f"
        app:civ_border_width="@dimen/header_photo_circle_border" />

</RelativeLayout>